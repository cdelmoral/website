---
import { cn } from "@lib/utils";
import { Color } from "@types";

type Props = {
  color: Color;
  label: string;
};

const { color, label } = Astro.props;
---

<p
  class={cn(
    "mt-1 inline-flex items-center rounded-full px-2 py-1 text-xs font-medium ring-1 ring-inset",
    color === "blue" &&
      "bg-blue-50 text-blue-700 ring-blue-600/20 dark:bg-blue-500/10 dark:text-blue-400 dark:ring-blue-500/20",
    color === "purple" &&
      "bg-purple-50 text-purple-700 ring-purple-600/20 dark:bg-purple-500/10 dark:text-purple-400 dark:ring-purple-500/20",
    color === "red" &&
      "bg-red-50 text-red-700 ring-red-600/20 dark:bg-red-500/10 dark:text-red-400 dark:ring-red-500/20",
  )}
>
  {label}
</p>
